/* pages/year/year.wxss */
.title{
  font-size: 38px;
  font-weight: bold;
  margin-left: 20px;
  margin-bottom: 25px;
  color: #474747;
}

.item {
  display: inline-block;
  width: 22px;
  margin-right: 5px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  background-color: #1989fa;
  border-radius: 2px;
}

.progress-part{
  display: flex;
  margin-bottom: 10px;  
}



.title-small{
  font-size: 15px;  
  margin-left: 20px;
  margin-bottom: 10px;
  font-weight: bold;  
  color: #333333;
}

.progress-title{
  font-size: 14px;
  width: 20%;
  margin-left: 20px;
  color: #333333;
}

.progress-list{
  width: 60%;
  margin-right: 20px;   
}

.progress-goal{
  font-size: 12px;
  width: 12%;
  margin-right: 20px;  
  color: #333333;
}
.progress-divider{  
  margin-left: 20px;
  margin-right: 20px;   
  margin-top: 25px;
  margin-bottom: 25px;
}


.countDown{
  display: flex;
  font-size: 14px;  
  margin-left: 20px;
  margin-right: 30px;
  color: #333333;
  margin-bottom: 25px;
}

.countDown-text{
  margin-left: 10px;
  margin-right: 10px;  
}

.countDown-time{
  padding-top: 2px;
}